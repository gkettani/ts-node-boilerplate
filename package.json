{
  "name": "ts-node-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for Node.js projects using TypeScript with eslint and jest",
  "main": "/src/index.ts",
  "scripts": {
    "dev": "set NODE_ENV=development && nodemon -r tsconfig-paths/register src/index.ts",
    "start": "set NODE_ENV=production && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts src/"
  },
  "keywords": [],
  "author": "gkettani",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0", 
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "winston": "^3.8.2"
  }
}
